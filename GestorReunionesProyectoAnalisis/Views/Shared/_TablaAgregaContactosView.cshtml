@{
    ViewData["Title"] = "BuscarTarea";
}


<section id="contenidoBT" style="margin-top:80px">
    <section id="principalBT">
        <CENTER>
            <div content="width=device-widt" class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <h1>Modificar Tareas</h1>

                    <table id="buscarT" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead class="thead-dark">

                            <tr>
                                <th>Nombre Tarea</th>
                                <th>Descripción</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>

                            </tr>

                        </thead>
                        <tbody>

                            <tr>
                                <form asp-action="viewModificarTarea" method="POST">
                                    <td> <label>Auditoria</label></td>

                                    <td><label>Nixon</label></td>

                                    <td>

                                        <input type="hidden" class="form-control" id="idP" name="idP" value="1" />
                                        <input class="btn btn-secondary" type="submit" id="Modificar" name="Modificar" value="Modificar" />
                                    </td>

                                    <td> <input type="button" name="eliminaT" class="btn btn-danger" value="Eliminar" onclick="EliminarTarea()"></td>
                                </form>

                            </tr>



                        </tbody>
                    </table>
                </div>
                <div class="col-sm-2"></div>
            </div>
        </CENTER>
    </section>
</section>