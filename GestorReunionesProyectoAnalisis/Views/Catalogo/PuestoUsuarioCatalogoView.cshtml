@{
    ViewData["Title"] = "PuestoUsuarioCatalogoView";

    if (ViewBag.PermisoUsuario == "1")
    {
        Layout = "_Layout";
    }
    else if (ViewBag.PermisoUsuario == "2")
    {
        Layout = "LayoutUsuarioEstandar";
    }
    else if (ViewBag.PermisoUsuario == "3")
    {
        Layout = "LayoutUsuarioCatalogos";
    }

    if (ViewBag.PermisoUsuario == null)
    {
        <script>
            redireccion('/Usuario/MuestraLoginUsuario');
        </script>
    }
}

@model String


<link rel="stylesheet" type="text/css" href="~/css/script.css" />
<link rel="stylesheet" type="text/css" href="~/css/moduloAdministrador.css" />
<link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<section id="contenido">
    <section id="principal">

        <div><br><br><br></div>
        <h1 class="my-4">
            Catálogo
            <small>Puesto de usuario</small>
        </h1>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item " role="presentation">
                <a class="nav-link active text-dark font-weight-bolder" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Nuevo</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link text-dark font-weight-bolder" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Buscar</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link text-dark font-weight-bolder" id="contact-tab" data-toggle="tab" href="#info" role="tab" aria-controls="contact" aria-selected="false">Modificar</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link text-dark font-weight-bolder" id="contact-tab" data-toggle="tab" href="#archivos" role="tab" aria-controls="contact" aria-selected="false">Borrar</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                @* Div Crear  *@
                <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">

                    <div class="bg-light mr-md-3 pt-3 px-3 pt-md-1 px-md-5 text-center overflow-hidden">
                        <div class="signup-form">
                            <form class="form-signin" asp-controller="Catalogo" asp-action="CrearPuesto" method="POST">
                                <h3>Nuevo puesto de usuario</h3>
                                <p class="hint-text">Espacio para ingresar nuevos puestos. Unicamente administradores autorizados.</p>
                                <div class="form-group"><input id="TC_Nombre_Puesto" name="TC_Nombre_Puesto" type="text" placeholder="Nombre" class="form-control" required></div>
                                <div class="form-group"><input id="TN_Salario" name="TN_Salario" type="number" placeholder="Pago por horas" class="form-control" required></div>
                                <div class="form-group"> <button type="submit" class="btn btn-outline-secondary">Ingresar</button> </div>
                                <!--<div class="form-group"><input type="button" href="javascript:;" onclick="registrarArticulo($('#nombreArticulo').val(), $('#precioArticulo').val(), $('#descripcionArticulo').val());return false;" class="btn btn-outline-secondary" id="registrar" name="registrar" value="Crear"/> </div> -->
                                @*<div class="form-group"><span class="spinner-border text-warning"></span></div>*@

                                @if (ViewBag.ERROR != null)
                                {
                                    <div class="alert alert-danger" id="al1" role="alert" style="display: block; text-align:center">

                                        <h6> @ViewBag.ERROR</h6>
                                    </div>
                                    <br>

                                }



                                @if (ViewBag.EXITO != null)
                                {
                                    <div class="alert alert-info" id="al1" role="contentinfo" style="display: block; text-align:center">
                                        <h6> @ViewBag.EXITO</h6>
                                    </div>
                                    <br>

                                }

                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="d-md-flex flex-md-equal w-100 my-md-1 pl-md-1">
                    <div class="bg-light mr-md-3 pt-1 px-3 pt-md-1 px-md-5  text-center overflow-hidden">
                        <div class="signup-form w-50">
                            <table id="catalogoBuscarTipoReunion" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Puesto usuario</th>
                                        <th>Pago por horas</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (ViewBag.ListaPuestos != null)
                                    {
                                        @foreach (PuestoModel temp in ViewBag.ListaPuestos)
                                        {
                                            <tr>
                                                <td>@temp.TC_Nombre_Puesto</td>
                                                <td>@temp.TN_Salario</td>

                                            </tr>
                                        }

                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>


            <div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="profile-tab">
                <div class="d-md-flex flex-md-equal w-100 my-md-1 pl-md-1">
                    <div class="bg-light mr-md-3 pt-1 px-3 pt-md-1 px-md-5  text-center overflow-hidden">
                        <div class="signup-form w-50">
                            <table id="catalogoModificarTipoReunion" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Puesto usuario</th>
                                        <th>Pago por horas</th>
                                        <th>Modificar</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (ViewBag.ListaPuestos != null)
                                    {

                                        string nombre = "Puesto";
                                        int numero = 1;

                                        @foreach (PuestoModel temp in ViewBag.ListaPuestos)
                                        {
                                            nombre += numero;
                                            numero = numero + 1;
                                            <tr>
                                                <td>@temp.TC_Nombre_Puesto</td>
                                                <td>@temp.TN_Salario</td>

                                                <td>

                                                    <input id="@nombre" name="nombrePuesto" class="form-control" value="@temp.TC_Nombre_Puesto" hidden />
                                                    <input id="@temp.TN_Id_Puesto" name="idPuesto" class="form-control" value="@temp.TN_Id_Puesto" hidden />
                                                    <input id="@temp.TN_Salario" name="salarioPuesto" class="form-control" value="@temp.TN_Salario" hidden />

                                                    <input class="btn btn-outline-secondary" type="button" href="javascript:;" data-toggle="modal" data-target="#modalCatalogoReunion" onclick="modalModificarPuesto( $('#@temp.TN_Id_Puesto').val(), $('#@nombre').val(), $('#@temp.TN_Salario').val() ); return false;" id="buttonModificar" name="buttonModificar" value="Seleccionar" />

                                                </td>
                                            </tr>
                                            nombre = "Puesto";
                                        }


                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="archivos" role="tabpanel" aria-labelledby="profile-tab">
                <br>
                <div class="d-md-flex flex-md-equal w-100 my-md-1 pl-md-1">
                    <div class="bg-light mr-md-3 pt-1 px-3 pt-md-1 px-md-5  text-center overflow-hidden">
                        <div class="signup-form w-50">
                            <table id="catalogoEliminarTipoReunion" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Puesto usuario</th>
                                        <th>Pago por horas</th>
                                        <th>Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.ListaPuestos != null)
                                    {
                                        @foreach (PuestoModel temp in ViewBag.ListaPuestos)
                                        {
                                            <tr>

                                                <td>@temp.TC_Nombre_Puesto</td>
                                                <td>@temp.TN_Salario</td>

                                                <form asp-action="EliminarPuesto" asp-controller="Catalogo" method="post">

                                                    <td>
                                                        <input id="TN_Id_Puesto" name="TN_Id_Puesto" class="form-control" value="@temp.TN_Id_Puesto" hidden />
                                                        <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                                                    </td>

                                                </form>

                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>



<div class="modal fade" id="modalCatalogoReunion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #343a40 !important;">
                <h3 style="color:#ffffff">Modificar puesto usuario</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">

                    <div class="bg-light mr-md-3 pt-3 px-3 pt-md-1 px-md-5 text-center overflow-hidden">
                        <div class="signup-form">
                            <form action="?controlador=Articulos&accion=crearCategoria" method="post">
                                <h3>Modificar puesto usuario</h3>
                                <p class="hint-text">Espacio para modificar puestos. Unicamente administradores</p>

                                <input id="ModificarIdPuesto" name="ModificarIdPuesto" class="form-control" value="" hidden />
                                <div class="form-group"><input id="ModificarPuesto" name="ModificarPuesto" type="text" placeholder="Nombre Puesto" value="" class="form-control"></div>
                                <div class="form-group"><input id="ModificarSalarioPuesto" name="ModificarSalarioPuesto" type="text" placeholder="Salario" value="" class="form-control"></div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <center>
                <div>
                    <span id="modPuesto"></span>
                </div>
            </center>


            <div class="modal-footer">
                <!--<button type="button"  href="javascript:;" class="btn btn-success">Finalizar</button>-->
                <button type="button" href="javascript:;" class="btn btn-success" onclick="modificarPuesto(
                                             $('#ModificarIdPuesto').val(),
                                             $('#ModificarPuesto').val(),
                                             $('#ModificarSalarioPuesto').val()
                                             ); return false;" id="modPuestoButton" name="modPuestoButton">
                    Finalizar
                </button>

            </div>


        </div>
    </div>
</div>

<div class="modal fade" id="modalAtencionEliminar" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #343a40 !important;">
                <h3 style="color:#ffffff">Atencion</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>¿Esta seguro que desea eliminar este puesto de sistema?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Acepto</button>
            </div>
        </div>
    </div>
</div>

