@{
    ViewData["Title"] = "ModificarContacto";

    if (ViewBag.PermisoUsuario == "1")
    {
        Layout = "_Layout";
    }
    else if (ViewBag.PermisoUsuario == "2")
    {
        Layout = "LayoutUsuarioEstandar";
    }
    else if (ViewBag.PermisoUsuario == "3")
    {
        Layout = "LayoutUsuarioCatalogos";
    }

    if (ViewBag.PermisoUsuario == null)
    {
        <script>
            redireccion('/Usuario/MuestraLoginUsuario');
        </script>
    }

}


<section id="contenidoC" style="margin-top:80px">
    <section id="principalC">
        <CENTER>
            <div content="width=device-widt" class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <h1>Modificar Contacto</h1>

                    <table id="consultaC" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre </th>
                                <th>Apellidos </th>
                                <th>Puesto </th>
                                <th>Oficina </th>
                                <th>Modificar</th>
                                <th>Eliminar</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (UsuarioModel temp in ViewBag.ListaUsuarios)
                            {
                                <tr>
                                    <td>@temp.Nombre</td>
                                    <td>@temp.PrimerApellido @temp.SegundoApellido</td>
                                    <td>@temp.Puesto</td>
                                    <td>@temp.Oficina</td>

                                    <form asp-action="VistaModificarUsuario" asp-controller="Usuario" method="post">

                                        <td>
                                            <input id="idUsuario" name="idUsuario" class="form-control" value="@temp.IdUsuario" hidden />
                                            <button type="submit" class="btn btn-secondary">Modificar</button>
                                        </td>

                                    </form>



                                    <form asp-action="EliminarUsuario" asp-controller="Usuario" method="post">
                                        <td>
                                            <input id="idUsuario" name="idUsuario" class="form-control" value="@temp.IdUsuario" hidden />
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </td>
                                    </form>



                                </tr>
                            }


                        </tbody>
                    </table>
                    @if (ViewBag.ERROR != null)
                    {
                        <div class="alert alert-danger" id="al1" role="alert" style="display: block; text-align:center">
                            <h6> @ViewBag.ERROR</h6>
                        </div>
                        <br>

                    }



                </div>
                <div class="col-sm-2"></div>
            </div>

        </CENTER>
    </section>
</section>
