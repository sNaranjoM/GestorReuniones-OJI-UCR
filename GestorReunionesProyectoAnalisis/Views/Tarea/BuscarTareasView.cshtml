@{
    ViewData["Title"] = "BuscarTarea";

    if (ViewBag.PermisoUsuario == "1")
    {
        Layout = "_Layout";
    }
    else if (ViewBag.PermisoUsuario == "2")
    {
        Layout = "LayoutUsuarioEstandar";
    }
    else if (ViewBag.PermisoUsuario == "3")
    {
        Layout = "LayoutUsuarioCatalogos";
    }

    if (ViewBag.PermisoUsuario == null)
    {
        <script>
            redireccion('/Usuario/MuestraLoginUsuario');
        </script>
    }
}


<section id="contenidoBT" style="margin-top:80px">
    <section id="principalBT">
        <CENTER>
            <div content="width=device-widt" class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <h1>Modificar Tareas</h1>

                    <table id="buscarT" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead class="thead-dark">

                            <tr>
                                <th>Nombre Tarea</th>
                                <th>Descripción</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>

                            </tr>

                        </thead>
                        <tbody>

                            @if (ViewBag.ListaTareas != null)
                            {
                                foreach (TareaModel temp in ViewBag.ListaTareas)
                                {
                                    <tr>
                                        <form asp-action="viewModificarTarea" method="POST">
                                            <td>@temp.TC_Nombre_Tarea</td>
                                            <td>@temp.TC_Descripcion_Tarea</td>

                                            <td>
                                                <input type="hidden" class="form-control" id="idTarea" name="idTarea" value="@temp.TN_Id_Tarea" />
                                                <input class="btn btn-secondary" type="submit" id="Modificar" name="Modificar" value="Modificar" />
                                            </td>
                                        </form>

                                        <form asp-action="EliminarTarea" method="POST">

                                            <input type="hidden" class="form-control" id="idTarea" name="idTarea" value="@temp.TN_Id_Tarea" />
                                            <td> <input class="btn btn-danger" type="submit" id="Eliminar" name="Eliminar" value="Eliminar" /></td>
                                        </form>



                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
                <div class="col-sm-2"></div>
            </div>
        </CENTER>
    </section>
</section>